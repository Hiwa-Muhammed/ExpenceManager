<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/et3_custom"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/expense_amount_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_regular"
        android:text="25000IQD"
        android:textColor="#222"
        android:textFontWeight="1000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/expense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/edit_income"
        android:fontFamily="@font/roboto_regular"
        android:text="12/12/2012"
        android:textColor="#999"
        android:textFontWeight="1000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/note_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:layout_below="@id/expense_amount_details"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="#777"
        android:fontFamily="@font/roboto_regular"

        />

    <TextView

        android:id="@+id/expense_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_amount_details"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/edit_income"
        android:layout_toRightOf="@id/note_txt"
        android:fontFamily="@font/roboto_regular"
        android:text="tamata"
        android:textColor="#777"
        android:textFontWeight="300"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/edit_income"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="45dp"
        />


</RelativeLayout>