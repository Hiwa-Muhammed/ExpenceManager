<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/et3_custom"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Hiwa Muhammed"
        android:textColor="#222"
        android:textFontWeight="1000"
        android:textSize="23sp" />
    <TextView
        android:id="@+id/income_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income:"
        android:layout_below="@id/employee_name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="#777"
        android:fontFamily="@font/roboto_regular"

        />
    <TextView

        android:id="@+id/income_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:text="22,000IQD"
        android:layout_toRightOf="@id/income_txt"
        android:layout_below="@id/employee_name"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textFontWeight="800"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/edit_income"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="45dp"
        />


</RelativeLayout>